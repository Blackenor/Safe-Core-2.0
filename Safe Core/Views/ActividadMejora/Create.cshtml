@using SafeCore.BLL
@model  SafeCore.BLL.ActividadMejora
@{

    ViewBag.Title = "Ingresar actividad de mejora";
}

<h2>Ingresar actividad de mejora</h2>
<div class="container m-3">
    @using (Html.BeginForm())
    {

        <form class="d-flex row container justify-content-center" style="padding-left: 8%; padding-right: 8%;" action="/my-handling-form-page" method="post">

            <ul class="row row-cols-1 row-cols-md-2 justify-content-center">

                <li class="col">
                    @Html.LabelFor(a => a.NOMBREMEJORA, "Nombre de actividad", htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(a => a.NOMBREMEJORA, htmlAttributes: new { @class = "form-control" })

                    @*<label for="name" class="form-label">Nombre Mejora:</label>
                        <input type="text" id="name" class="form-control" name="nombreMejora">*@
                </li>



                <div class="d-flex col-12">
                    <li class="col">
                        @Html.LabelFor(a => a.DESCRIPCIONMEJORA, "Recomendación para el cliente", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(a => a.DESCRIPCIONMEJORA, htmlAttributes: new { @class = "form-control" })

                        @*<label for="text" id="Recomendacion" class="form-label">Recomendacion para el cliente :</label>
                            <textarea class="form-control" name="text" type="text"></textarea>*@
                    </li>
                </div>
            </ul>
            <button class="btn btn-custom col-auto" type="submit">Enviar actividad</button>
        </form>
    }

</div>

