@using SafeCore.BLL
@model  SafeCore.BLL.HistorialAtrasos

@{
    ViewBag.Title = "CreateAtrasos";
}

<h2>Crear Historial Atrasos</h2>



<div class="container m-3">

    @using (Html.BeginForm())
    {

        <div class="d-flex row container justify-content-center" style="padding-left: 8%; padding-right: 8%;" action="/my-handling-form-page" method="post">

            <ul class="row row-cols-1 row-cols-md-2 justify-content-center">

                <li class="col form-group">
                    @Html.LabelFor(c => c.PROFESIONAL_RUT_PROF, "RUT del Profesional", htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(c => c.PROFESIONAL_RUT_PROF, htmlAttributes: new { @class = "form-control" })
                </li>

                <li class="col form-group">
                    @Html.LabelFor(c => c.FECHA, "Fecha de Atraso", htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(c => c.FECHA, htmlAttributes: new { @class = "form-control", @type = "datetime-local" })
                </li>

            </ul>
            <div class="d-flex justify-content-center">
                <button class="btn btn-custom col-auto" type="submit">Ingresar Atraso</button>
                @TempData["mensaje"]
            </div>
            <br />

            <div class="d-flex justify-content-start">
                <a class="btn btn-custom col-auto" href="@Url.Action("HistorialAtrasos", "Personal")"><i class="fa fa-chevron-left" aria-hidden="true"></i> Volver</a>
            </div>
</div>
    }

</div>