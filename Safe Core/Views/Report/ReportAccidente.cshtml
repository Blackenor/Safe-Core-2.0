@using SafeCore.BLL
@{
    ViewBag.Title = "ReportAccidente";
}

<h2>Reportar accidente</h2>

<div class="container m-3">
    <form class="d-flex row container justify-content-center" style="padding-left: 8%; padding-right: 8%;" action="/my-handling-form-page" method="post">

        <ul class="row row-cols-1 row-cols-md-2 justify-content-center">
            <li class="col">
                <label for="number" class="form-label">ID report:</label>
                <input type="number" id="number" class="form-control" name="user_rut">
            </li>
            <li class="col">
                <label for="number" class="form-label">Rut Cliente:</label>
                <input type="number" id="number" class="form-control" name="user_rut" maxlength="9" oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
            </li>
            <li class="col">
                <label for="date" class="form-label">Fecha Accidente:</label>
                <input type="date" name="date_user" class="form-control">
            </li>
            <div class="d-flex col-12">
            <li class="col">
                <label for="msg" class="form-label">Descripción:</label>
                <textarea class="form-control" name="msg" type="text" placeholder="Escriba algo"></textarea>
            </li>
</div>
        </ul>
<button class="btn btn-custom col-auto" type="submit">Envíe su mensaje</button>
    </form>
</div>
