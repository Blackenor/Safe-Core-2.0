@using SafeCore.BLL

@{
    ViewBag.Title = "ReporteCliente";
}

@{ List<ReporteCliente> report = (List<ReporteCliente>)ViewBag.ReporteCliente; }

<h2>Reporte cliente</h2>

<div>
    <a type="button" class="btn btn-custom mb-4 mt-4" href="@Url.Action("CreateReportClient", "Report")"><i class="fa fa-plus mx-2"></i>Ingresar Reporte de cliente</a>
</div>

    <table class="table" bgcolor="#FFFFFF">
        <thead class="thead-dark">
            <tr>
                <th>ID Reporte</th>
                <th>Rut del cliente</th>
                <th>Fecha</th>
                <th>Descripcion</th>
            </tr>

        </thead>


        @foreach (var reportc in report)
                {
                    <tr>
                        <td>@reportc.ID_REPORTC</td>
                        <td>@reportc.CLIENTES_RUT_CLIENT</td>
                        <td>@reportc.FECHA</td>
                        <td>@reportc.DESCRIPCION</td>
                    </tr>
                }

        
    </table>